<!DOCTYPE html>
<html>
<head>
  <title>MashGame</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  </script>

  <script id="buttons" type="text/x-handlebars-template">
    <div id="results"> Something here</div>
    <div class="ui buttons save">
    <div id="again" class="ui button">Start Over</div>
    <div class="or"></div>
    <div id="save" class="ui positive button">Save</div>
    <div class="or"></div>
    <div id="email" class="ui positive button">Email my MASH</div>
